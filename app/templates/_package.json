{
  "name": "<%= moduleName %>",
  "version": "0.0.0",
  "description": "<%= moduleDescription %>",
  "license": "MIT",
  "repository": "<%= githubUsername %>/<%= repoName %>",
  "author": {
    "name": "<%= name %>",
    "email": "<%= email %>",
    "url": "<%= humanizedWebsite %>"
  },<% if (cli) { %>
  "bin": "cli.js",<% } %>
  "engines": {
    "node": ">=4"
  },
  "scripts": {
    "prettier": "prettier --write --single-quote --no-semi '**/*.js'",
		"lint": "eslint .",
    "test": "npm run lint && <% if (nyc) { %>nyc <% } %>ava",
		"test:watch": "ava --watch"
  },
  "files": [
    "index.js"<% if (cli) { %>,
    "cli.js"<% } %>
  ],
  "keywords": [<% if (cli) { %>
    "cli-app",
    "cli",<% } %>
    ""
  ],
  "dependencies": {<% if (cli) { %>
    "meow": "^3.7.0"
  <% } %>},
  "devDependencies": {
    "ava": "^0.19.1",<% if (coveralls) { %>
    "coveralls": "^2.11.12",<% } %><% if (nyc) { %>
    "nyc": "^10.0.0",<% } %>
    "eslint": "^3.19.0",
    "eslint-config-precure": "^0.5.1",
    "prettier": "^1.4.4"
  }<% if (coveralls) { %>,
  "nyc": {
    "reporter": [
      "lcov",
      "text"
    ]
  }<% } %>
}
