{
  "name": "<%= moduleName %>",
  "version": "0.0.0",
  "description": "<%= moduleDescription %>",
  "license": "MIT",
  "repository": "akameco/<%= repoName %>",
  "author": "akameco <akameco.t@gmail.com> (akameco.github.io)",
  <% if (cli) { %>
  "bin": "cli.js",<% } %>
  "engines": {
    "node": ">=4"
  },
  "scripts": {
		"add-contributor": "all-contributors add",
    "add:cov": "cat ./coverage/lcov.info | coveralls",
    "precommit": "lint-staged",
		"fmt": "prettier --write '**/*.{js,json,md}'",
		"flow": "flow",
    "lint": "eslint .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage --ci --runInBand",
    "test:ci": "npm run validate && npm run add:cov",
    "validate": "npm run lint && npm run flow && npm run test:cov"
	},
	"lint-staged": {
    "*.js": ["fmt", "validate", "git add"],
    "*.{json,md}": ["fmt", "git add"]
  },
  "files": [
    "index.js"<% if (cli) { %>,
    "cli.js"<% } %>
  ],
  "keywords": [<% if (cli) { %>
    "cli-app",
    "cli",<% } %>
    ""
  ],
  "dependencies": {<% if (cli) { %>
    "meow": "^3.7.0"
  <% } %>}
}
