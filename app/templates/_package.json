{
  "name": "<%= moduleName %>",
  "version": "0.0.0",
  "description": "<%= moduleDescription %>",
  "license": "MIT",
  "repository": "akameco/<%= repoName %>",
  "author": "akameco <akameco.t@gmail.com> (akameco.github.io)",
  <% if (cli) { %>
  "bin": "cli.js",<% } %>
  "engines": {
    "node": ">=4"
  },
  "scripts": {
		"add-contributor": "all-contributors add",
		"fmt": "prettier --write '**/*.{js,json}'",
		"flow": "flow",
    "lint": "eslint .",
    "test": "jest",
		"test:watch": "jest --watch",
		"precommit": "lint-staged",
	},
	"lint-staged": {
    "*.js": ["fmt", "lint", "test", "git add"],
    "*.json": ["fmt", "git add"]
  },
  "files": [
    "index.js"<% if (cli) { %>,
    "cli.js"<% } %>
  ],
  "keywords": [<% if (cli) { %>
    "cli-app",
    "cli",<% } %>
    ""
  ],
  "dependencies": {<% if (cli) { %>
    "meow": "^3.7.0"
  <% } %>}
}
